            MDTextButton:
                text: "г.Новочебоксарск"
                pos_hint: {"center_x": .5, "center_y": .8}
            MDRaisedButton:
                text: "Войти"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                pos_hint: {"center_x": .5, "center_y": .35}
                on_press:
                    app.screen("Enter")



