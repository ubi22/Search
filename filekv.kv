        Screen:
            name: "Enter"
        Screen:
            name: "search"
            MDTextField:
                id: poisk
                hint_text: "Поиск"
                size_hint: .6, None
                pos_hint: {"center_x": .5, "center_y": .9}

            MDIconButton:
                icon: "search-web"
                pos_hint: {"center_x": .75, "center_y": .9}
                on_release:
                    app.search()



        Screen:
            name: "admin"
            MDTextField:
                id: poisk
                hint_text: "Поиск"
                size_hint: .6, None
                pos_hint: {"center_x": .5, "center_y": .9}

            MDIconButton:
                icon: "search-web"
                pos_hint: {"center_x": .75, "center_y": .9}
                on_release:
                    app.search()
            MDTextButton:
                text: "Создать"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                pos_hint: {"center_x": .5, "center_y": .35}
                on_press:
                    app.screen("create")
            MDTextButton:
                text: "Удалить"
                custom_color: 0, 1, 0, 1
                pos_hint: {"center_x": .5, "center_y": .3}
                on_press:
                    app.screen("delete")



        Screen:
            name: "delete"
            MDTextField:
                id: delete
                hint_text: "Что удалить?"
                size_hint: .6, None
                pos_hint: {"center_x": .5, "center_y": .9}

            MDTextButton:
                icon: "content-save"
                text: "Удалить"
                pos_hint: {"center_x": .5, "center_y": .5}
                on_release:
                    app.delbase()

        Screen:
            name: "create"
            MDTextField:
                id: name
                hint_text: "Имя преподователя"
                size_hint: .6, None
                pos_hint: {"center_x": .5, "center_y": .90}

            MDTextField:
                id: time
                hint_text: "Время занятий"
                size_hint: .6, None
                pos_hint: {"center_x": .5, "center_y": .80}

            MDTextField:
                id: gr
                hint_text: "Группа"
                size_hint: .6, None
                pos_hint: {"center_x": .5, "center_y": .70}
            MDTextButton:
                text: "Создать"
                size_hint: .6, None
                pos_hint: {"center_x": .75, "center_y": .60}
                on_release:
                    app.createbase()

        Screen:
            name: "setting"
            ScrollView:
                scroll_timeout : 100
                MDList:
                    MDTextButton:
                        text: "Имя"